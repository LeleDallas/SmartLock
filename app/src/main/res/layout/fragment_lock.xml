<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragmet.LockFragment">


    <com.github.badoualy.datepicker.DatePickerTimeline
        android:id="@+id/timeline"
        android:layout_width="match_parent"
        app:mti_lblDayColor="@color/black"
        app:mti_bgLblTodayColor="@color/rosyBrown"
        app:mti_tabSelectedColor="@color/black"
        app:mti_lblLabelColor="@color/black"
        app:mti_lblDateColor="@color/black"
        app:mti_primaryColor="@color/rosyBrown"
        android:layout_height="wrap_content"
        app:mti_lblDateSelectedColor="@color/black"
        app:mti_bgLblDateSelectedColor="@color/lightGray"
        app:mti_ringLblDateSelectedColor="@color/rosyBrown"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="@string/apps_usage_time"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/quicksand"
        android:textSize="18sp"
        android:elevation="8dp"
        android:background="@drawable/bordercard"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:layout_editor_absoluteX="66dp" />

</LinearLayout>